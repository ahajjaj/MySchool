<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_login_gradients"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="16dp"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="200dp"
                android:text="Liste Des Matieres :"
                android:textColor="#EEEEEE"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:textStyle="bold" />


            <Button

                android:id="@+id/btnmathematiques"
                android:background="@drawable/background_login"
                android:text="Mathematiques"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:textSize="12sp"
                android:textColor="#f16f7d"
                android:padding="0dp"
                android:clickable="true"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnphysique"
                android:background="@drawable/background_login"
                android:text="Physique"
                android:textAllCaps="false"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:textSize="12sp"
                android:textColor="#f16f7d"
                android:padding="12dp"
                />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnhistoire"
                android:background="@drawable/background_login"
                android:text="Histoire"
                android:textAllCaps="false"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:textSize="12sp"
                android:textColor="#f16f7d"
                android:padding="0dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnAnglais"
                android:background="@drawable/background_login"
                android:text="Anglais"
                android:textAllCaps="false"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:textSize="12sp"
                android:textColor="#f16f7d"
                android:padding="0dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnphylosophie"
                android:background="@drawable/background_login"
                android:text="Phylosophie"
                android:textAllCaps="false"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:textSize="12sp"
                android:textColor="#f16f7d"
                android:padding="0dp"/>








        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>